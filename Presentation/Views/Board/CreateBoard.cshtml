@model DomainLayer.Board
@{
    ViewBag.Title = "Board";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
     <section class="content-wrapper main-content clear-fix">
         @if(Model !=null)
         {
            <h3> @Model.Name </h3>
         }

         else
         {
             <h3> New Board </h3>
         }
         @using (Html.BeginForm("SaveBoard","Board", FormMethod.Post))
         {
             <fieldset>
                @* @if(string.IsNullOrEmpty(Model.Name))
                 {
                    <legend>Novo Quadro</legend>
                 }
                 @else
                 {
                    <legend>Novo Quadro</legend>
                 }*@
                 <legend>Novo Quadro</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m=> m.Name)
                        @Html.TextBoxFor(m => m.Name)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Description)
                        @Html.TextBoxFor(m => m.Description)
                    </li>
                </ol>
                <input id="btSaveBoard" type="submit" value="Salvar" />
            </fieldset>
         
         }
         
        </section>
}
