@model DomainLayer.Card
@{
    if(Model != null)
    {
    ViewBag.Title = "Editar cartao"+ Model.Name;
    }
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
     <section class="content-wrapper main-content clear-fix">
  
         @using (Html.BeginForm("UpdateCard", "Card", new {id = Model.CardID}, FormMethod.Post))
         {
             <fieldset>
                <ol>
                    <li>
                        @Html.LabelFor(m=> m.Name)
                        @Html.TextBoxFor(m => m.Name)
                    </li>
                    <li>
                        @Html.LabelFor(m=> m.Description)
                        @Html.TextBoxFor(m => m.Description)
                    </li>
                       <li>
                        @Html.LabelFor(m=> m.CreationDate)
                        @Html.TextBoxFor(m => m.CreationDate)
                    </li>
                       <li>
                        @Html.LabelFor(m=> m.FinalDate)
                        @Html.TextBoxFor(m => m.FinalDate)
                    </li>
                </ol>
                <input type="submit" value="Salvar" />
            </fieldset>
         
         }
         
        </section>
}
